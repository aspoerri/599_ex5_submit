<article class="highlightslist <% if (pageID == 'home') { %>jumbotron hidden-xs<% } %>">
  <div class="container">
    <div class="row">
        <% highlights.forEach(function(item) { %>
        <div class="<% if (pageID == 'home') { %>col-lg-3 col-md-4 col-sm-6 text-center<% } else { %>col-sm-12 <% } %>">
          <h3 class="highlightslist-title"><%= item.site %></h3>
          <h5 class="highlightslist-name"><a href="/highlights/<%= item.id %>"></a></h5>
          <div class="highlightslist-info">
            <a href="/highlights/<%= item.id %>">

              <% if (pageID == 'home') { %>
                <img class="highlightslist-img img-circle" src="<%= item.image %>" alt="Photo of <%= item.site %>" width="250px"></a>
              <% } %>

              <% if (pageID == 'highlightsList') { %>
                <div class="container" style="width:850px;">
                  <div class="row">
                    <div class="col-md-6">
                      <img class="highlightslist-img img-circle pull-left" src="<%= item.image %>" alt="Photo of <%= item.site %>" width="400px"></a>
                    </div>
                    <div class="col-md-6">
                      <iframe width="300" height="200" src="<%= item.videoEmbed %>"> </iframe>
                    </div>
                  </div>
                </div>
              <% } %>
            </a>

            <% if (pageID == 'highlightDetail') { %>
              <img class="highlightslist-img img-responsive" src="<%= item.image %>" alt="Photo of <%= item.site %>" width="800px"></a>
            <% } %>
          </a>

            <% if (pageID !== 'home') { %>
              <% if (pageID == 'highlightsList') { %>
              <% } else { %>
                <div style="clear: both;">
                  <%- item.info %>
                </div>
                <div class="container" style="width:850px;">
                  <div class="row">
                    <div class="col-md-6">
                      <iframe width="400" height="300" src="<%= item.videoEmbed %>"> </iframe>
                    </div>
                    <div id="map<%= item.id %>" class="col-md-6" style="width:400px; height:300px;">
                      Hello World
                    </div>
                    <script>
                    function initMap() {
                      var centerPos = {lat: 46.802556, lng: 8.304693};
                      var map1 = new google.maps.Map(document.getElementById('map<%= item.id %>'), {
                        center: centerPos,
                        zoom: 7,
                        mapTypeId: google.maps.MapTypeId.ROADMAP,
                        draggable: true,
                      });
                      var marker1Pos = {lat: <%- item.lat %>, lng: <%- item.long %>};
                      var marker = new google.maps.Marker({
                        position: marker1Pos,
                        map: map1,
                        title: '<%= item.site %>'
                      });
                      marker.addListener('click', function() {
                        var infowindow = new google.maps.InfoWindow({
                          content: "<%= item.category %>",
                          maxWidth: 400
                        });
                        infowindow.open(map1, marker);
                      });
                    }
                    </script>
                    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCkGXKqryRAntACFGym5tBgcd06J1qefRk&callback=initMap"
                    async defer></script>
                  </div>
                </div>
              <% } %>
            <% } %>
          </div>
        </div>
        <%  }); %>
    </div><!-- row -->
  </div><!-- container -->
</article>
